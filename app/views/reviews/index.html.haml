%section.reviews.container
  .row
    .col-sm-8.col-sm-offset-1
      %header
        %h3 Recent Reviews
      %ul
        - @reviews.each do |review|
          %article.review
            %li.row
              .col-sm-3
                = link_to review.business.name, review.business
                %p!= "by <a href="">#{review.user.full_name}</a>"
              .col-sm-6
                %p= review.description
              .col-sm-3
                %img(src="#{review.business.picture_url}")
